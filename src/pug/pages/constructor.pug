extends ../templates/common

block vars
	- const title = 'Комплекты футбольной формы'
	- const files = '.png, .jpg, .jpeg, .bmp, .pdf, .zip, .rar, .tar, .doc, .docx'

block content
	.container.double-colums
		aside.product-preview
			div.product-preview__box
				picture.product-preview__picture
					img(src=imgPath + "products/shirt-1.png", alt="Волейбол")
				div.product-preview__total
					div.product-preview__price
						section
							span Стоимость комплекта
							b#single-price 1&nbsp;500&nbsp;₽
						section
							span Общая стоимость
							b#total-price 31&nbsp;500&nbsp;₽
					button.btn.btn_primary Отправить Запрос
					footer.product-preview__note Указана предварительная стоимость, окончательную стоимость рассчитает наш менеджер

		div.product-form
			h1.focus-title #{title}
			.accordion__block
				section.accordion__section
					.accordion__question Описание
					.accordion__answer Стандартный срок производства заказа 10-15 рабочих дней.Есть возможность произвести заказ в&nbsp;сжатые сроки (от&nbsp;3&nbsp;до&nbsp;7&nbsp;дней), за&nbsp;срочность мы&nbsp;берем дополнительную наценку 20-50%.
				section.accordion__section
					.accordion__question Технологии
					.accordion__answer Высылаем Вам бриф (список вопросов) для составления технического задания.Также, в&nbsp;письме&nbsp;Вы получите наш каталог уже реализованных дизайнов. На&nbsp;основании заполненного брифа, мы&nbsp;согласовываем с&nbsp;Вами устное тз&nbsp;с&nbsp;примерами, озвучиваем стоимость дизайна и&nbsp;приступаем к&nbsp;работе, после получения предоплаты за&nbsp;дизайн. Срок разработки одного дизайна, с&nbsp;учетом внесения правок, 4-7 рабочих дней.
				section.accordion__section
					.accordion__question Размерная сетка
					.accordion__answer
						table.simply-table
							thead
								tr
									th(width="23%") Рост
									th(width="30%") Обхват груди
									th(width="31%") Обхват бедер
									th(width="27%") Размер
							tbody
								tr
									td 104
									td 56
									td 60,6
									td 28
								tr
									td 110
									td 58
									td 63,0
									td 28-30
								tr
									td 116
									td 60
									td 65,3
									td 30
								tr
									td 122
									td 62
									td 68,0
									td 30-32


			form.dark-form(action="").constructor#constructor

				input(type="hidden" name="base-cost" data-cost="0" id="base-cost")

				fieldset.text-radio
					legend Гендер
					.text-radio__buttons
						input(type="radio", name="gender", id="gender-man" data-cost="0")
						label(for="gender-man")
							span Мужская
						input(type="radio", name="gender", id="gender-women" data-cost="0")
						label(for="gender-women")
							span Женская

				fieldset.text-radio
					legend Возраст
					.text-radio__buttons
						input(type="radio", name="age", id="age-child" data-cost="0")
						label(for="age-child")
							span Дети
						input(type="radio", name="age", id="age-adult" data-cost="0")
						label(for="age-adult")
							span Взрослые

				fieldset.number
					legend Количество комплектов
					.number__input
						input(type="button", value="–" class="decrease-numb")
						input(type="number" min="1" value="1" name="count" id="count")
						input(type="button", value="+"  class="increase-numb")

				fieldset.text-radio.text-radio_footered
					legend Вид формы
					.text-radio__buttons.text-radio__buttons_triple
						input(type="radio", name="type", id="type-training" data-cost="800")
						label(for="type-training")
							span Training
							footer от 800₽
						input(type="radio", name="type", id="type-pro" data-cost="1500" checked)
						label(for="type-pro")
							span Pro
							footer от 1500₽
						input(type="radio", name="type", id="type-game" data-cost="1200")
						label(for="type-game")
							span Game
							footer от 1200₽

				fieldset.text-radio
					legend Рукав
					.text-radio__buttons
						input(type="radio", name="arm", id="arm-short" data-cost="0")
						label(for="arm-short")
							span Короткий
						input(type="radio", name="arm", id="arm-long" data-cost="0")
						label(for="arm-long")
							span Длинный

				fieldset.text-radio.text-radio_footered
					legend Требуется разработать дизайн
					.text-radio__buttons
						input(type="radio", name="design", id="design-yes" data-cost="800")
						label(for="design-yes")
							span Да
							footer +800₽
						input(type="radio", name="design", id="design-no" data-cost="0")
						label(for="design-no")
							span Нет

				fieldset.number
					legend Загрузите свой дизайн 
						small (если есть)

					label.file-drop(for="files-design")
						.file-drop__box#file-drop__box
							.file-drop__msg Перетащите файлы сюда, чтобы загрузить…
							.file-drop__btn Выбрать
							input.file-drop__input(type="file" id="files-design" multiple accept=files)
						.file-drop__note #{files}

				fieldset.text-select
					legend Виды материалов
					.text-select
						.text-select__input
							input.text-select__field(type="text" placeholder="Выберите материал" readonly data-cost="0")
						.text-select__options
							.option(data-value="Первый материал" data-cost="0") Первый материал
							.option(data-value="Второй материал" data-cost="100") Второй материал
							.option(data-value="Третий материал" data-cost="200") Третий материал

				fieldset.text-checkboxes.text-checkboxes_footered
					legend Добавьте к комплектации
					.text-checkboxes__buttons
						input(type="checkbox", name="extra", id="extra-gaiters" data-cost="800")
						label(for="extra-gaiters")
							span Гетры
							footer +800₽
						input(type="checkbox", name="extra", id="extra-bad" data-cost="1200")
						label(for="extra-bad")
							span Сумка
							footer +1200₽
						input(type="checkbox", name="extra", id="extra-pennant" data-cost="800")
						label(for="extra-pennant")
							span Вымпел
							footer +800₽
						input(type="checkbox", name="extra", id="extra-chevrons" data-cost="1200")
						label(for="extra-chevrons")
							span Шевроны
							footer +1200₽

	script(src="/js/constructor.js")